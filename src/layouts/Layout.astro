---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link
			rel="icon"
			type="image/ico"
			href="https://res.cloudinary.com/dbbixakcl/image/upload/f_auto,q_auto/v1/FrontendMentor/Pod/s27vstgwj4exbbbnenpw"
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Barlow:wght@500;700;900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<div class="content-layout">
			<Header />
			<main class="main">
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>
<style is:global>
	:root {
		--title-color: #162542;
		--text-color: #7b8bad;
	}
	/* Reset Styles */
	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}

	a {
		text-decoration: none;
		color: inherit;
	}

	ul {
		list-style: none;
	}

	img {
		max-width: 100%;
	}

	body {
		font-family: "Barlow", sans-serif;
		font-weight: 500;
	}

	.content-layout {
		display: flex;
		flex-direction: column;
		align-items: center;
		min-width: 20em; /* 320px */
		width: 100%;
		height: 100vh;
		min-height: 20em; /* 320px */
		overflow-x: hidden;
	}

	.main {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100%;
	}

	.section__title {
		font-weight: 900;
		line-height: 1;
		text-transform: uppercase;
		color: var(--title-color);
	}

	.section__description {
		font-size: 1rem;
		line-height: 1.62;
		color: var(--text-color);
	}
</style>
