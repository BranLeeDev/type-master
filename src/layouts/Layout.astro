---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta title="title" content={title} />
		<meta
			name="description"
			content="Upgrade to a high-quality mechanical typing experience with the Typemaster Keyboard. It offers a wide variety of switches, keycaps, and reliable wireless connectivity. Highly compatible with major computer brands, gaming consoles, and mobile devices. Features include Bluetooth connectivity, high-capacity battery, and RGB backlit modes. Pre-order now and experience improved productivity and gaming without breaking the bank. Release date: 5/27. Typemaster 2021. All Rights Reserved."
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="author" content="Brandon AgÃ¼ero" />
		<meta name="robots" content="index,follow" />
		<meta name="generator" content={Astro.generator} />
		<!-- Open Graph / Facebook -->
		<meta property="og:locale" content="es_ES" />
		<meta property="og:type" content="website" />
		<meta
			property="og:description"
			content="Upgrade to a high-quality mechanical typing experience with the Typemaster Keyboard. It offers a wide variety of switches, keycaps, and reliable wireless connectivity. Highly compatible with major computer brands, gaming consoles, and mobile devices. Features include Bluetooth connectivity, high-capacity battery, and RGB backlit modes. Pre-order now and experience improved productivity and gaming without breaking the bank. Release date: 5/27. Typemaster 2021. All Rights Reserved."
		/>
		<meta
			property="og:image"
			content="https://res.cloudinary.com/dbbixakcl/image/upload/f_auto,q_auto/v1/FrontendMentor/Pod/s27vstgwj4exbbbnenpw"
		/>
		<!-- Twitter -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:title" content={title} />
		<meta
			name="twitter:description"
			content="Upgrade to a high-quality mechanical typing experience with the Typemaster Keyboard. It offers a wide variety of switches, keycaps, and reliable wireless connectivity. Highly compatible with major computer brands, gaming consoles, and mobile devices. Features include Bluetooth connectivity, high-capacity battery, and RGB backlit modes. Pre-order now and experience improved productivity and gaming without breaking the bank. Release date: 5/27. Typemaster 2021. All Rights Reserved."
		/>
		<meta name="twitter:site" content="@branleedev" />
		<meta name="twitter:creator" content="@branleedev" />
		<title>{title}</title>
		<link
			rel="icon"
			type="image/ico"
			href="https://res.cloudinary.com/dbbixakcl/image/upload/f_auto,q_auto/v1/FrontendMentor/Pod/s27vstgwj4exbbbnenpw"
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Barlow:wght@500;700;900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<div class="content-layout">
			<Header />
			<main class="main">
				<slot />
			</main>
			<Footer />
		</div>
	</body>

	<style is:global>
		:root {
			--title-color: #162542;
			--text-color: #7b8bad;
			--background-color: #f16718;
		}

		/* Reset Styles */
		* {
			padding: 0;
			margin: 0;
			box-sizing: border-box;
		}

		a {
			text-decoration: none;
			color: inherit;
		}

		ul {
			list-style: none;
		}

		img {
			max-width: 100%;
		}

		body {
			font-family: "Barlow", sans-serif;
			font-weight: 500;
		}

		.content-layout {
			display: flex;
			flex-direction: column;
			align-items: center;
			min-width: 20em; /* 320px */
			width: 100%;
			height: 100vh;
			min-height: 20em; /* 320px */
			overflow-x: hidden;
		}

		.main {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 2em; /* 32px */
			width: 100%;
			margin-top: 4em; /* 64px */
			margin-bottom: 6em; /* 96px */
		}

		.section__title {
			font-weight: 900;
			line-height: 1;
			text-transform: uppercase;
			color: var(--title-color);
		}

		.section__description {
			font-size: 1rem;
			line-height: 1.62;
			color: var(--text-color);
		}
	</style>
</html>
