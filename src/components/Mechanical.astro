---
import Card from "./Card.astro";

const dataCard = [
	{
		image: "/images/svg/icon-compatible.svg",
		alt: "White television icon",
		title: "Highly Compatible",
		description:
			"Easy to use and works well with all major computer brands, gaming consoles and mobile devices. Plug & play, no installation or driver needed.",
	},
	{
		image: "/images/svg/icon-bluetooth.svg",
		alt: "White bluetooth icon",
		title: "Wireless With Bluetooth",
		description:
			"Powerful 2.4G RF technology allows you to connect the cordless keyboard from up to 30ft away. Simply plug the unifying receiver into your computer.",
	},
	{
		image: "/images/svg/icon-battery.svg",
		alt: "White battery icon",
		title: "High Capacity Battery",
		description:
			"Equipped with a long-lasting built-in battery, you’ll never have to spend a dime on replaceable ones. Enjoy 40 hours of usage time between charges.",
	},
	{
		image: "/images/svg/icon-light.svg",
		alt: "White light icon",
		title: "RGB Backlit Modes",
		description:
			"Choose from 4 backlight brightness levels and adjustable breathing speed. Each key glows intensely in the dark and helps you type in low light conditions.",
	},
];
---

<section class="main__section main__section--mechanical">
	<div class="mechanical__gallery">
		<picture class="gallery__picture gallery__picture--background">
			<source
				class="picture__source"
				srcset="/images/jpg/desktop/image-phone-and-keyboard.jpg"
				media="(width >= 90em)"
			/>
			<source
				class="picture__source"
				srcset="/images/jpg/tablet/image-phone-and-keyboard.jpg"
				media="(width >= 48em)"
			/>
			<img
				class="gallery__image"
				src="/images/jpg/mobile/image-phone-and-keyboard.jpg"
				alt="Black keyboard with a black phone on the side"
			/>
		</picture>
		<picture class="gallery__picture">
			<source
				class="picture__source"
				srcset="/images/jpg/desktop/image-glass-and-keyboard.jpg"
				media="(width >= 90em)"
			/>
			<source
				class="picture__source"
				srcset="/images/jpg/tablet/image-glass-and-keyboard.jpg"
				media="(width >= 48em)"
			/>
			<img
				class="gallery__image"
				src="/images/jpg/mobile/image-glass-and-keyboard.jpg"
				alt="Black keyboard with a glass on the side"
			/>
		</picture>
	</div>
	<div class="mechanical__data-container">
		<h2 class="section__title">Mechanical Wireless Keyboard</h2>
		<p class="section__description">
			The Typemaster keyboard boasts top-notch build and practical design. It
			offers a wide variety of switches and keycaps, along with reliable
			wireless connectivity.
		</p>
	</div>
	<ul class="mechanical__list">
		{
			dataCard.map((item) => (
				<li class="list__item">
					<Card
						image={item.image}
						alt={item.alt}
						title={item.title}
						description={item.description}
					/>
				</li>
			))
		}
	</ul>
</section>

<style>
	.main__section--mechanical {
		display: flex;
		flex-direction: column;
		gap: 5em; /* 80px */
		width: 91%;
	}

	.mechanical__gallery {
		display: flex;
		gap: 1.5em; /* 24px */
	}

	.mechanical__data-container {
		display: flex;
		flex-direction: column;
		gap: 1.5em; /* 24px */
	}

	.gallery__picture:nth-of-type(1) {
		position: relative;
		left: -10%;
		width: 30%;
	}

	.gallery__picture:nth-of-type(2) {
		position: relative;
		left: -6%;
		width: 70%;
	}

	.gallery__picture--background {
		position: relative;
		border-radius: 1em;
	}

	.gallery__picture--background::after {
		content: "";
		position: absolute;
		top: 0;
		left: 10%;
		width: 100%;
		height: 100%;
		border-radius: 1em; /* 16px */
		background-color: #f26818b3;
	}

	.gallery__image {
		max-width: 110%;
		height: 100%;
		max-height: 100%;
		border-radius: 1em;
	}

	.section__title {
		grid-area: title;
		text-align: center;
		font-size: 2em; /* 32px */
	}

	.section__description {
		grid-area: desc;
		text-align: center;
	}

	.mechanical__list {
		grid-area: list;
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		grid-template-rows: repeat(4, 1fr);
		grid-template-areas:
			"highly highly highly highly"
			"bluetooth bluetooth bluetooth bluetooth"
			"battery battery battery battery"
			"light light light light";
		gap: 4em; /* 64px */
		margin-top: 1.5em; /* 24px */
	}

	.list__item:nth-of-type(1) {
		grid-area: highly;
	}

	.list__item:nth-of-type(2) {
		grid-area: bluetooth;
	}

	.list__item:nth-of-type(3) {
		grid-area: battery;
	}

	.list__item:nth-of-type(4) {
		grid-area: light;
	}

	/* 768px*/
	@media screen and (width >= 48em) {
		.mechanical__data-container {
			display: flex;
			flex-direction: row;
			align-items: center;
			gap: 8em; /* 128px */
		}

		.section__title {
			text-align: start;
		}

		.section__description {
			text-align: start;
		}

		.gallery__picture:nth-of-type(1) {
			left: 0;
		}

		.gallery__picture:nth-of-type(2) {
			left: 0;
		}

		.gallery__picture--background::after {
			left: 0;
		}

		.mechanical__gallery {
			justify-content: space-between;
		}

		.gallery__image {
			width: 100%;
			max-width: 100%;
			max-height: 480px;
			object-fit: cover;
		}

		.mechanical__list {
			grid-template-areas:
				"highly highly bluetooth bluetooth"
				"highly highly bluetooth bluetooth"
				"battery battery light light"
				"battery battery light light";
		}
	}

	/* 1440px */
	@media screen and (width >= 90em) {
		.main__section--mechanical {
			display: grid;
			grid-template-columns: repeat(5, 1fr);
			grid-template-rows: repeat(2, max-content);
			align-items: center;
			grid-template-areas:
				"gallery gallery gallery data data"
				"list list list list list";
			gap: 8em; /* 128px */
		}

		.mechanical__gallery {
			grid-area: gallery;
			position: relative;
		}

		.mechanical__gallery::before {
			content: "";
			position: absolute;
			bottom: 0;
			left: -17.5em; /* 280px */
			width: 16em; /* 256px */
			height: 15em; /* 240px */
			border-radius: 1em; /* 16px */
			background-color: #e8eff2;
		}

		.mechanical__data-container {
			grid-area: data;
			flex-direction: column;
			align-items: flex-start;
			gap: 1.5em; /* 24px */
		}

		.mechanical__list {
			grid-area: list;
			grid-template-areas:
				"highly bluetooth battery light"
				"highly bluetooth battery light"
				"highly bluetooth battery light"
				"highly bluetooth battery light";
		}
	}

	/* 829px */
	@media screen and (height <= 51.8125em) {
		.mechanical__gallery,
		.mechanical__data-container,
		.list__item {
			view-timeline-name: --scroll;
			view-timeline-axis: block;
			animation-timeline: --scroll;
			animation-name: show;
			animation-range: entry 10% cover 40%;
			animation-fill-mode: both;
		}

		@keyframes show {
			from {
				opacity: 0;
				scale: 25%;
			}
			to {
				opacity: 1;
				scale: 100%;
			}
		}
	}

	/* 830px */
	@media screen and (height >= 51.875em) {
		.main__section--mechanical {
			animation: left-side 1.2s ease-in-out forwards;
		}

		@keyframes left-side {
			from {
				opacity: 0;
				transform: translateX(100%);
			}
			to {
				opacity: 1;
				transform: translateX(0);
			}
		}
	}
</style>
